// main: ../theme.styl

// Colours
h1
a
blockquote::before
em
    color: blue


&.inverse
&.section
    color: white

    h1
    a
    em
    blockquote::before
    .remark-slide-number
        color: white


a
    text-decoration: none

    &::before
        content: "ðŸ”— "
        font-size: .5em
        vertical-align: middle
        white-space: nowrap

    &:hover
        color: orange

// Thin font blocks
h1
ul
ol
blockquote
blockquote + p
    font-weight: 300


// Fonts & borders
h1
    font-size:   45px

    strong
        font-weight: 400
        font-family: Sinzano

&.section h1
    border-top:    3px solid shallow-white
    border-bottom: 3px solid shallow-white
    font-size:     65px
    font-family:   Sinzano
    text-shadow:   1px 1px 3px darkgrey, -1px -1px 2px textgrey

&.single h1
    font-size: 75px

&.not(.longlist)
    ul
    ol
        font-size: 40px

        ul
        ol
            font-size: .55em


small
    font-size: .6em


pre
img
video
    border:     3px solid lightgrey
    box-shadow: 0 0 30px alpha(darkgrey, .4)


blockquote

    &::before
        content:   'Â«'
        font-size: 6em

    // Consider the <p> that immediately follow a blockquote as a cite
    & + p
        font-size: 20px !important

        em
            color: textgrey


code
    font-family: 'Source Code Pro'


svg
    fill: darkgrey

    .accent
        fill: blue

&.inverse svg
    fill: lightgrey

    .accent
        fill: white


.remark-inline-code
    white-space:      nowrap
    border-radius:    3px
    font-size:        .9em
    color:            blue
    background-color: lightgrey


.breadcrumb
    text-transform: uppercase
    font-size:      16px
    font-weight:    700
    color:          lightgrey


.round img
    border-radius: 50%


